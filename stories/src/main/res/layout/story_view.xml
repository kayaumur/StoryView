<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/progress_bars"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="@dimen/_20sdp"/>
    <ImageView
        android:layout_width="@dimen/_20sdp"
        android:id="@+id/user_image"
        app:layout_constraintTop_toBottomOf="@id/progress_bars"
        app:layout_constraintStart_toStartOf="@id/progress_bars"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_height="@dimen/_20sdp"/>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/user_name"
        app:layout_constraintTop_toTopOf="@id/user_image"
        app:layout_constraintBottom_toBottomOf="@id/user_image"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintStart_toEndOf="@id/user_image"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="0dp"
        android:translationZ="-1dp"
        android:id="@+id/story_go_previous"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.2"
        android:layout_height="match_parent"/>
    <ImageView
        android:layout_width="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="@id/progress_bars"
        app:layout_constraintTop_toTopOf="@id/user_image"
        android:src="@drawable/ic_close"
        app:layout_constraintBottom_toBottomOf="@id/user_image"
        android:layout_height="@dimen/_20sdp"/>
    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/container_image"
        android:visibility="gone"
        android:scaleType="fitXY"
        android:translationZ="-3dp"
        android:layout_height="match_parent"/>

    <com.google.android.exoplayer2.ui.PlayerView
        android:layout_width="match_parent"
        android:keepScreenOn="true"
        android:visibility="gone"
        android:translationZ="-3dp"
        android:id="@+id/player_view"
        app:use_controller="false"
        app:resize_mode="fill"
        android:layout_height="match_parent">
    </com.google.android.exoplayer2.ui.PlayerView>
</androidx.constraintlayout.widget.ConstraintLayout>