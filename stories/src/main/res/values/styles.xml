<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:progressBarStyle">@style/StoryProgressBarStyle</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="StoryProgressBarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/colorAccent</item>
        <item name="android:progressBackgroundTint">@color/colorPassive</item>
    </style>

</resources>